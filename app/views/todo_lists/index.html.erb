<p id="notice"><%= notice %></p>
<header>
  <h1>Todo List App</h1>
  <h2>Todo Lists</h2>
</header>
<body>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr id="<%= dom_id(todo_list) %>">
        <th><%= todo_list.title %></th>
        <th><%= todo_list.description %></th>
        <th><%= link_to 'List Items',todo_list_todo_items_path(todo_list) %></th>
        <th><%= link_to 'Show', todo_list %></th>
        <th><%= link_to 'Edit', edit_todo_list_path(todo_list) %></th>
        <th><%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo List', new_todo_list_path %>
</body>
